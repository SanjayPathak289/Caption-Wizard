<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".bottomsheet.BottomSheet"
    android:background="@drawable/bottomsheetbg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/importImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_video"
        app:layout_constraintBottom_toTopOf="@+id/importTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/importTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_textview_background"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="30dp"
        android:text="Import video"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/importImageView"
        app:layout_constraintStart_toStartOf="@+id/importImageView"
        app:layout_constraintTop_toBottomOf="@+id/importImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>